<!doctype html>
<html>
  <head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/css/materialize.min.css">
    <link rel="stylesheet" type="text/css" href="./style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/js/materialize.min.js"></script>
    <script src="./js/models/basket.js"></script>
    <script src="./js/models/item.js"></script>
    <script src="./js/views/basketView.js"></script>
    <script src="./js/views/itemView.js"></script>
    <script src="./script.js"></script>
  </head>
  <body class="grey lighten-4">
      <header>
        <nav>
          <div class="nav-wrapper green lighten-1">
            <a href="#" class="brand-logo center">Basket Case</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
              {{#if currentUser}}
              <li><a href="/logout">Logout {{currentUser.local.email}}</a></li>
              <li><a href="/secret">My Baskets</a></li>
              {{else}}
              <li><a href="/login">Login</a></li>
              <li><a href="/signup">Signup</a></li>
              <li><a href="/auth/twitter"><img id="twitter-login" src="http://i.imgur.com/3kYcO3Y.png"></a>
              {{/if}}
            </ul>
          </div>
        </nav>
      </header>
      <div class="container">
      <main>
        <div class="row">
          <div class="col s3 push-s9">
            <ul class="collapsible" data-collapsible="accordion">
              <li>
                <div class="collapsible-header active ">Most Recent Baskets</div>
                <div class="collapsible-body">
                  <ul class="collapsible popout mostRecent" data-collapsible="accordion">
                  </ul>
                </diV>
              </li>
            </ul>
          </div>
          <div class="col s9 pull-s3">
            <div class="valign-wrapper">
              <div class="valign">
                  <button class="btn waves-effect waves-light shop red darken-1 btn-large" type="submit" name="action" value=1000>$10
                      <i class="material-icons right">add_shopping_cart</i>
                  </button>

                  <button class="btn waves-effect waves-light shop red darken-1 btn-large" type="submit" name="action" value=2500>$25
                      <i class="material-icons right">add_shopping_cart</i>
                  </button>

                  <button class="btn waves-effect waves-light shop red darken-1 btn-large" type="submit" name="action" value=5000>$50
                      <i class="material-icons right">add_shopping_cart</i>
                  </button>

                  <button class="btn waves-effect waves-light shop red darken-1 btn-large" type="submit" name="action" value=10000>$100
                      <i class="material-icons right">add_shopping_cart</i>
                  </button>
              </div>
            </div>
          <div class="basket">
            <div class="divider"></div>
          </div>
        </div>
      </div>
    </div>
    </main>
    <footer class="page-footer green lighten-1">
        <div class="row">
          <div class="footer-copyright col s12 right-align">
          <div class="container">
            &copy 2015 Davis Green, Negar Kalbasi, Peter Zhang
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
